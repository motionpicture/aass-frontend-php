RewriteEngine On

# Some hosts may require you to use the `RewriteBase` directive.
# If you need to use the `RewriteBase` directive, it should be the
# absolute physical path to the directory that contains this htaccess file.
#
RewriteBase /

# 静的ファイルをpublicから検索
RewriteRule ^([^/]*\.(ico|txt|html|xml))$ public/$1 [QSA,L]
RewriteRule ^((css|images|js)/.+)$ public/$1 [QSA,L]

# バックエンド
RewriteRule ^(admin/(css|images|js)/.+)$ public/$1 [QSA,L]
RewriteRule ^admin[/]*(.*)$ public/admin/index.php?_url=/$1 [QSA,L]

# 静的ファイル以外はindex.php
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^(.*)$ public/index.php?_url=/$1 [QSA,L]

php_flag display_errors On
